{
  "name": "ipreplay",
  "version": "1.0.0",
  "description": "",
  "main": "src/lambda-services/handler.ts",
  "author": "Nu Butthajit",
  "license": "MIT",
  "engines": {
    "node": "8.8.1"
  },
  "scripts": {
    "start": "NODE_PATH=dist/ node dist/app.init.js",
    "build": "node_modules/.bin/tsc",
    "build:dev": "node_modules/.bin/tsc",
    "build:stage": "node_modules/.bin/tsc",
    "build:prod": "NODE_ENV=production node_modules/.bin/tsc && npm run copy:dist:graphql",
    "dev": "npm config set strict-ssl false; node_modules/.bin/nodemon --inspect=0.0.0.0:5858 --exec ts-node -r tsconfig-paths/register src/app.init.ts | ./node_modules/.bin/bunyan -o short -l trace",
    "dev:debug": "node_modules/.bin/nodemon --inspect=0.0.0.0:5858 --exec ts-node -r tsconfig-paths/register src/app.init.ts; echo 'http://0.0.0.0:5858/json/list for debug list'",
    "tests": "NODE_ENV=test node_modules/.bin/_mocha --opts .mocha --exit -r ts-node/register -r tsconfig-paths/register test/support/config.ts $(find test -name '*.test.ts')",
    "test": "NODE_ENV=test node_modules/.bin/nodemon --watch ./ --exec mocha --timeout 9999999 -r ts-node/register -r tsconfig-paths/register test/support/config.ts $(find test -name '*.test.ts' ! -path '_*.test.ts')",
    "serve:dev": "NODE_ENV=development NODE_PATH=dist/ node dist/app.init.js",
    "db:seed": "ts-node -r tsconfig-paths/register src/db/seed.ts",
    "db:seed:aws": "USE_DYNAMO_REMOTE=true ts-node -r tsconfig-paths/register src/db/seed.ts",
    "db:drop": "ts-node -r tsconfig-paths/register src/db/drop.ts",
    "sls:remove": "sls remove --stage=development && sls delete-appsync",
    "sls:deploy": "NODE_ENV=development npm run sls:lamda:deploy && npm run sls:appsync:deploy",
    "sls:update": "npm run sls:appsync:update && npm run sls:lamda:deploy",
    "sls:lamda:start": "NODE_ENV=development serverless offline start",
    "sls:lamda:deploy": "serverless --stage=development deploy",
    "sls:lamda:update": "serverless --stage=development deploy",
    "sls:appsync:deploy": "serverless deploy-appsync",
    "sls:appsync:update": "serverless update-appsync",
    "sls:appsync:delete": "serverless delete-appsync"
  },
  "dependencies": {
    "apollo-server-lambda": "^1.3.6",
    "apollo-server-restify": "^1.3.6",
    "aws-sdk": "^2.233.1",
    "bcrypt-nodejs": "0.0.3",
    "cancan": "^3.1.0",
    "chai": "^4.1.2",
    "cookie": "^0.3.1",
    "dotenv": "^4.0.0",
    "dynamoose": "^0.8.7",
    "factory-girl": "^5.0.2",
    "faker": "^4.1.0",
    "graphql": "^0.13.2",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^3.0.0",
    "jsonwebtoken": "^8.2.1",
    "ramda": "^0.25.0",
    "restify": "^6.3.4",
    "restify-cookies": "^0.2.5",
    "restify-cors-middleware": "^1.1.0",
    "restify-errors": "^6.0.0",
    "source-map-support": "^0.5.5",
    "subscriptions-transport-ws": "^0.9.8",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "tsconfig-paths": "^3.3.2",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "chai-subset": "^1.6.0",
    "depcheck": "^0.6.9",
    "imports-loader": "^0.8.0",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.4",
    "serverless": "^1.27.2",
    "serverless-appsync-plugin": "0.0.7",
    "serverless-offline": "^3.20.3",
    "serverless-plugin-metric": "^1.0.4",
    "serverless-webpack": "^5.0.0-rc.2",
    "sinon": "^4.5.0",
    "timekeeper": "^2.1.1",
    "typescript": "^2.9.2",
    "webpack": "^4.8.1",
    "webpack-node-externals": "^1.7.2"
  }
}